<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	
	<style name="MyTheme.Splash" parent ="Theme.AppCompat.Light">
	   <item name="android:windowBackground">@drawable/splash_screen</item>
	   <item name="android:windowNoTitle">true</item>  
	</style>

    <style name="control_label">
    	<item name="android:textColor">#9E9E9E</item>
    	<item name="android:gravity">right</item>
    	<item name="android:layout_marginRight">24dp</item>
    	<item name="android:layout_marginLeft">24dp</item>
    	<item name="android:textSize">16dp</item>
    </style>

    <style name="form_control_static">
    	<item name="android:textColor">#212121</item>
    	<item name="android:gravity">center_vertical</item>
    	<item name="android:layout_height">40dp</item>
    	<item name="android:textSize">20dp</item>
    	<item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="fcs_block1" parent="form_control_static">
    	<item name="android:minWidth">300dp</item>
    	<item name="android:maxWidth">450dp</item>
	</style>

	<style name="rowTextForPharmacy">
    	<item name="android:textColor">#000000</item>
    	<item name="android:textSize">14sp</item>
    </style>

    <style name="headerTextForPharmacy">
    	<item name="android:textColor">@color/Grey_500</item>
    	<item name="android:textSize">14sp</item>
    </style>

	<style name="searchName">
    	<item name="android:textColor">#000000</item>
    	<item name="android:textSize">14sp</item>
    </style>
	
    <style name="searchMatch">
    	<item name="android:textColor">@color/Grey_500</item>
    	<item name="android:textSize">12sp</item>
    </style>

	<style name="pharmacyStateActive">
    	<item name="android:textColor">#ff00c853</item>
    	<item name="android:textSize">12sp</item>
    </style>

	<style name="pharmacyStateReserve">
    	<item name="android:textColor">#ffffd600</item>
    	<item name="android:textSize">12sp</item>
    </style>

	<style name="pharmacyStateClose">
    	<item name="android:textColor">#ffd50000</item>
    	<item name="android:textSize">12sp</item>
    </style>
	
	<style name="rwiPharmacy">
    	<item name="android:textColor">#000000</item>
    	<item name="android:textSize">14sp</item>
    </style>

    <style name="rwiSubwayOrRegion">
    	<item name="android:textColor">@color/Grey_500</item>
    	<item name="android:textSize">12sp</item>
    </style>

	<style name="rwtiPharmacy">
    	<item name="android:textColor">#000000</item>
    	<item name="android:textSize">14sp</item>
    </style>

    <style name="rwtiSubwayOrRegion">
    	<item name="android:textColor">@color/Grey_500</item>
    	<item name="android:textSize">12sp</item>
    </style>

	<style name="dialog_animation">
		<item name="android:windowEnterAnimation">@anim/slide_up</item>
		<item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="alert_success">
    	<item name="android:background">#CCFF90</item>
    	<item name="android:gravity">center</item>
    	<item name="android:textColor">#33691E</item>
    	<item name="android:textSize">24sp</item>
    </style>

    <style name="alert_warning">
    	<item name="android:background">#FFFF8D</item>
    	<item name="android:gravity">center</item>
    	<item name="android:textColor">#F57F17</item>
    	<item name="android:textSize">24sp</item>
    </style>

    <style name="alert_danger">
    	<item name="android:background">#FF9E80</item>
    	<item name="android:gravity">center</item>
    	<item name="android:textColor">#BF360C</item>
    	<item name="android:textSize">24sp</item>
    </style>

    <style name="alert_info">
    	<item name="android:background">#80D8FF</item>
    	<item name="android:gravity">center</item>
    	<item name="android:textColor">#01579B</item>
    	<item name="android:textSize">24sp</item>
    </style>
	
</resources>
