<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    ><!-- android:shape="" Она представляет собой прямоугольник с закругленными углами или эллипс, и т.д. -->
    <solid android:color="@color/background_color_black"/> <!-- Цвет фона -->

    <!-- padding - это расстояние от внутреннего пространства фонового изображения внутри краев -->
    <padding android:left="5dp" android:top="5dp"
             android:right="5dp" android:bottom="5dp" />

    <stroke android:width="0.0dp" android:color="#D9D9D9"/> <!-- Свойства кадра картинки -->
    <corners android:radius="5dp" /> <!-- Степень скругления-->
</shape>